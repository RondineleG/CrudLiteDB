@page
@model CrudLiteDB.Pages.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar";
}


<h2>Editar Cliente</h2>
<hr />

<form method="post">
    <input asp-for="Cliente.ClienteId" hidden />

    <input asp-for="Cliente.Nome" placeholder="Name" class="form-control" />
    <br>
    <input asp-for="Cliente.Telefone" placeholder="Description" class="form-control" />
    <br>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="index" class="btn btn-link">Voltar</a>

</form>