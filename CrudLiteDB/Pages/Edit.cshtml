@page
@model CrudLiteDB.Pages.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar";
}

<head>

    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/js/main.js" rel="javascript" />

</head>

<h2>Editar Cliente</h2>
<hr />

<form method="post">
    
    <fieldset>
        <input asp-for="Cliente.ClienteId" hidden />
        <fieldset class="grupo">

            <div class="campo">

                <input asp-for="Cliente.Nome" placeholder="Nome" class="form-control">
            </div>
            <div class="campo">
                <input asp-for="Cliente.Sobrenome" placeholder="Sobrenome" class="form-control">
            </div>
        </fieldset>
        <fieldset class="grupo">
            <div class="campo">
                <input asp-for="Cliente.Email" placeholder="E-mail" class="form-control">
            </div>
            <div class="campo">
                <input asp-for="Cliente.Telefone" onkeyup="somenteNumeros(this);"
                       placeholder="Telefone" class="form-control">
            </div>
        </fieldset>

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-page="index" class="btn btn-link">Voltar</a>
    </fieldset>
</form>
