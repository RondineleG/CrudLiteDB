@page
@model CrudLiteDB.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Cadastro";
}

<head>

    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/js/main.js" rel="javascript" />

</head>

<h2>Novo Cliente</h2>
<hr />

<form autocomplete="on" class="form form-horizontal" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <fieldset>
        <fieldset class="grupo">
            <div class="campo">
                <input asp-for="Cliente.Nome" placeholder="Nome" class="form-control"  value="" />
                <span asp-validation-for="Cliente.Nome"></span>
            </div>
             
             <div class="campo">
                 <input asp-for="Cliente.Sobrenome" placeholder="Sobrenome" class="form-control" value=""/>
                 <span asp-validation-for="Cliente.Sobrenome"></span>
             </div>
        </fieldset>           
        
        <fieldset class="grupo">
            <div class="campo">
                <input asp-for="Cliente.Email" placeholder="Email" class="form-control"  value="" />
                <span asp-validation-for="Cliente.Email"></span>
            </div>


            <div class="campo">
                <input asp-for="Cliente.Telefone" placeholder="Telefone"  class="form-control"  value="" />
                <span asp-validation-for="Cliente.Telefone"></span>
            </div>
        </fieldset>
        <div class="campo">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-page="index" class="btn btn-link">Voltar</a>
        </div>

        </fieldset>
</form>