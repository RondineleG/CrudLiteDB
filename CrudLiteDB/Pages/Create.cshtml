@page
@model CrudLiteDB.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Cadastrar";
}


<h2>Cadastrar Cliente</h2>
<hr />

<form method="post">
    <input asp-for="Cliente.Nome" placeholder="Nome" class="form-control" />
    <br>
    <input asp-for="Cliente.Telefone" placeholder="Telefone" class="form-control" />
    <br>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="index" class="btn btn-link">Voltar</a>

</form>

