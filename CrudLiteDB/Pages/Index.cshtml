@page
@model CrudLiteDB.Pages.IndexModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home";
}

<h2>Cadastro de Clientes Usando LiteDB</h2>
<hr />

@{
    var contador = 1;
}
<head>

    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/js/main.js" rel="javascript" />

</head>
<h2>LiteDB</h2>
<hr>

@if (TempData["message"] != null)
{
    <div class="alert alert-info" role="alert">@TempData["message"]</div>
}

<a asp-page="create" class="btn btn-success">Novo Cliente</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>######</th>
            <td>ClienteId</td>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
        <tr>
            <td>
                <a asp-page="details" asp-route-id="@cliente.ClienteId" class="botao btn-default">Details</a>
                <a asp-page="delete" asp-route-id="@cliente.ClienteId" class="botao btn-danger">Delete</a>
                <a asp-page="edit" asp-route-id="@cliente.ClienteId" class="botao btn-primary">Edit</a>
            </td>           
            <td>@cliente.ClienteId</td>
            <td>@cliente.Nome</td>
            <td>@cliente.Sobrenome</td>
            <td>@cliente.Email</td>
            <td>@cliente.Telefone</td>
        </tr>
            contador++;
        }
    </tbody>
</table>

